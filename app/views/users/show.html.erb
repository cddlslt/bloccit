<div class="row">
  <div class="col-md-8">
    <div class="media">
      <br />
      <% avatar_url = @user.avatar_url(128) %>
      <% if avatar_url %>
        <div class="media-left">
          <%= image_tag avatar_url, class: 'media-object gravatar' %>
        </div>
      <% end %>
      <div class="media-body">
        <h2 class="media-heading"><%= @user.no_name_message %></h2>
        <small>
          <%= pluralize(@user.posts.count, 'post') %> <br>
          <%= pluralize(@user.comments.count, 'comment') %>
        </small>
      </div>
    </div>
  </div>
</div>

<h2>Posts</h2>
<%= render @user.posts %>

<h2>Comments</h2>
<%= render @user.comments %>

<h2>Favorite Posts</h2>
<% @favorite_posts.each do |post| %>
  <div class="row">
    <div class="col-md-8">
      <% avatar_url = post.user.avatar_url(55) %>
      <% if avatar_url %>
        <div>
          <%= image_tag avatar_url, class: 'gravatar pull-left' %>
        </div>
      <% end %>
      <%= render post %>
    </div>
  </div>
<% end %>
